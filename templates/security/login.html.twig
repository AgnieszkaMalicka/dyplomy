{% extends 'base.html.twig' %}

{% block title %}Zaloguj się{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<div class="header_meta header_meta_one">
    <div class="container">
        <div class="row">            
            <nav class="meta-login">
                <ul>
                    <li><a href="{{ path('app_login') }}" class="fancybox">Zaloguj się</a></li>
                    <li><a href="{{ path('app_register') }}" class="fancybox">Zarejestruj się</a></li>
                </ul>
            </nav>
        </div> 
    </div>
</div>

<header class="site-header home-one" id="masthead">
    <div class="container">
        <div class="row">
            <div class="site-branding col-xs-12 col-sm-3"> <a href="register.html#"><img alt="educationpress" class="brand" src="images/logo5.png" /></a> </div>
        </div>
    </div>
</header>

<div class="page-spacer clearfix">
    <div id="primary" class="content-area">
        <div class="container">
            <div class="row">
                <main id="main" class="site-main col-xs-12">
                    <div class="col-xs-12 col-sm-10 register-form form clearfix">
                       <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
                        <form method="post">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    
                        <label for="inputPassword">Hasło</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}
                        
                        <input name="submit" id="submit" class="btn btn-default" value="Zaloguj się" type="submit">
                    </form>
                    </div> 
                </main>
            </div> 
        </div> 
    </div>
</div> 
<script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>

<script src="{{ asset('js/theme.js') }}" type="text/javascript"></script>

<script src="{{ asset('vendor/fancybox/js/jquery.fancybox.js') }}" type="text/javascript"></script>

<script src="{{ asset('vendor/fancybox/js/custom.fancybox.js') }}" type="text/javascript"></script>
<script>
jQuery.noConflict();
jQuery('.fancybox').fancybox();
</script>
    
{% endblock %}
